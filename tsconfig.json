{
    "compilerOptions": {
        "lib": ["es2016"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "strict": true,
        "target": "es6",
        "allowJs": true
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}